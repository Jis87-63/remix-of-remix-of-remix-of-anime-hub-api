{
  "name": "AniHublist API",
  "version": "1.0.0",
  "description": "API RESTful para acesso a dados de animes. Integre dados de anime em seu projeto em minutos.",
  "base_url": "https://anihublistv.vercel.app/api",
  "documentation_url": "https://anihublistv.vercel.app/docs",
  "authentication": {
    "type": "Bearer Token",
    "header": "Authorization",
    "format": "Bearer ak_sua_api_key",
    "description": "Todas as requisições devem incluir sua API Key no header Authorization. Obtenha sua chave gratuita em https://anihublistv.vercel.app/dashboard"
  },
  "rate_limits": {
    "requests_per_minute": 60,
    "requests_per_day": 10000
  },
  "cors": {
    "enabled": true,
    "allowed_origins": "*",
    "allowed_methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
    "allowed_headers": ["Authorization", "Content-Type", "Accept"]
  },
  "endpoints": [
    {
      "method": "GET",
      "path": "/v1/animes/trending",
      "description": "Lista animes em alta no momento",
      "parameters": [
        {"name": "page", "type": "integer", "default": 1, "description": "Número da página"},
        {"name": "limit", "type": "integer", "default": 20, "max": 50, "description": "Quantidade por página"}
      ],
      "example_request": "GET https://anihublistv.vercel.app/api/v1/animes/trending?page=1&limit=10",
      "example_response": {
        "data": [
          {
            "id": 21,
            "title": {"romaji": "One Punch Man", "english": "One Punch Man", "native": "ワンパンマン"},
            "coverImage": {"large": "https://...", "extraLarge": "https://...", "color": "#e4a15d"},
            "description": "The story of Saitama...",
            "episodes": 12,
            "status": "FINISHED",
            "format": "TV",
            "genres": ["Action", "Comedy"],
            "averageScore": 83,
            "popularity": 400000
          }
        ],
        "pageInfo": {"total": 5000, "currentPage": 1, "lastPage": 500, "hasNextPage": true, "perPage": 10}
      }
    },
    {
      "method": "GET",
      "path": "/v1/animes/popular",
      "description": "Lista os animes mais populares de todos os tempos",
      "parameters": [
        {"name": "page", "type": "integer", "default": 1},
        {"name": "limit", "type": "integer", "default": 20, "max": 50}
      ],
      "example_request": "GET https://anihublistv.vercel.app/api/v1/animes/popular"
    },
    {
      "method": "GET",
      "path": "/v1/animes/search",
      "description": "Busca animes por título, gênero ou ano",
      "parameters": [
        {"name": "q", "type": "string", "description": "Termo de busca"},
        {"name": "genre", "type": "string", "description": "Filtrar por gênero (ex: Action, Romance, Comedy)"},
        {"name": "year", "type": "integer", "description": "Filtrar por ano de lançamento"},
        {"name": "status", "type": "string", "enum": ["RELEASING", "FINISHED", "NOT_YET_RELEASED", "CANCELLED"], "description": "Status do anime"},
        {"name": "page", "type": "integer", "default": 1},
        {"name": "limit", "type": "integer", "default": 20}
      ],
      "example_request": "GET https://anihublistv.vercel.app/api/v1/animes/search?q=naruto&genre=Action"
    },
    {
      "method": "GET",
      "path": "/v1/animes/:id",
      "description": "Busca detalhes de um anime específico pelo ID",
      "parameters": [
        {"name": "id", "type": "integer", "required": true, "description": "ID do anime"}
      ],
      "example_request": "GET https://anihublistv.vercel.app/api/v1/animes/21"
    },
    {
      "method": "GET",
      "path": "/v1/animes/season",
      "description": "Lista animes de uma temporada específica",
      "parameters": [
        {"name": "season", "type": "string", "enum": ["WINTER", "SPRING", "SUMMER", "FALL"], "description": "Estação do ano"},
        {"name": "year", "type": "integer", "description": "Ano da temporada"},
        {"name": "page", "type": "integer", "default": 1},
        {"name": "limit", "type": "integer", "default": 20}
      ],
      "example_request": "GET https://anihublistv.vercel.app/api/v1/animes/season?season=WINTER&year=2026"
    },
    {
      "method": "GET",
      "path": "/v1/animes/genre/:genre",
      "description": "Lista animes por gênero específico",
      "parameters": [
        {"name": "genre", "type": "string", "required": true, "description": "Nome do gênero (ex: Action, Romance, Comedy, Drama)"},
        {"name": "page", "type": "integer", "default": 1},
        {"name": "limit", "type": "integer", "default": 20}
      ],
      "example_request": "GET https://anihublistv.vercel.app/api/v1/animes/genre/Action"
    },
    {
      "method": "GET",
      "path": "/v1/animes/studio/:studio",
      "description": "Lista animes por estúdio de produção",
      "parameters": [
        {"name": "studio", "type": "string", "required": true, "description": "Nome do estúdio (ex: MAPPA, Bones, Wit Studio)"},
        {"name": "page", "type": "integer", "default": 1},
        {"name": "limit", "type": "integer", "default": 20}
      ],
      "example_request": "GET https://anihublistv.vercel.app/api/v1/animes/studio/MAPPA"
    }
  ],
  "response_format": {
    "data": "Array ou objeto com os dados do anime",
    "pageInfo": {
      "total": "Total de resultados",
      "currentPage": "Página atual",
      "lastPage": "Última página",
      "hasNextPage": "Se há próxima página",
      "perPage": "Itens por página"
    }
  },
  "anime_object": {
    "id": "ID único do anime",
    "title": {
      "romaji": "Título em romaji",
      "english": "Título em inglês",
      "native": "Título original (japonês)"
    },
    "coverImage": {
      "large": "URL da imagem de capa grande",
      "extraLarge": "URL da imagem de capa extra grande",
      "color": "Cor dominante da imagem"
    },
    "bannerImage": "URL da imagem de banner",
    "description": "Sinopse do anime",
    "episodes": "Número total de episódios",
    "status": "Status (RELEASING, FINISHED, NOT_YET_RELEASED, CANCELLED)",
    "format": "Formato (TV, OVA, MOVIE, SPECIAL, ONA)",
    "genres": "Array de gêneros",
    "averageScore": "Pontuação média (0-100)",
    "popularity": "Popularidade",
    "season": "Temporada (WINTER, SPRING, SUMMER, FALL)",
    "seasonYear": "Ano da temporada",
    "startDate": {"year": "Ano", "month": "Mês", "day": "Dia"},
    "nextAiringEpisode": {
      "airingAt": "Timestamp do próximo episódio",
      "episode": "Número do próximo episódio",
      "timeUntilAiring": "Segundos até a exibição"
    },
    "trailer": {
      "id": "ID do trailer (YouTube/Dailymotion)",
      "site": "Plataforma do trailer",
      "thumbnail": "URL da thumbnail"
    },
    "studios": {"nodes": [{"name": "Nome do estúdio"}]}
  },
  "code_examples": {
    "javascript": "const response = await fetch('https://anihublistv.vercel.app/api/v1/animes/trending', {\n  headers: {\n    'Authorization': 'Bearer ak_sua_api_key',\n    'Content-Type': 'application/json'\n  }\n});\nconst animes = await response.json();\nconsole.log(animes.data);",
    "python": "import requests\n\nresponse = requests.get(\n    'https://anihublistv.vercel.app/api/v1/animes/trending',\n    headers={\n        'Authorization': 'Bearer ak_sua_api_key',\n        'Content-Type': 'application/json'\n    }\n)\nanimes = response.json()\nprint(animes['data'])",
    "curl": "curl -X GET \"https://anihublistv.vercel.app/api/v1/animes/trending\" \\\n  -H \"Authorization: Bearer ak_sua_api_key\" \\\n  -H \"Content-Type: application/json\""
  },
  "errors": {
    "401": {"error": "API key required", "message": "Forneça sua API Key no header Authorization"},
    "401_invalid": {"error": "Invalid or inactive API key", "message": "A API Key fornecida é inválida ou está desativada"},
    "400": {"error": "Invalid API path", "message": "O endpoint não existe"},
    "500": {"error": "Internal server error", "message": "Erro interno do servidor"}
  },
  "getting_started": [
    "1. Crie uma conta gratuita em https://anihublistv.vercel.app/auth",
    "2. Acesse o Dashboard em https://anihublistv.vercel.app/dashboard",
    "3. Gere uma nova API Key",
    "4. Use a API Key no header Authorization de suas requisições",
    "5. Faça requisições para os endpoints disponíveis"
  ],
  "support": {
    "email": "suporte@anihublist.com",
    "documentation": "https://anihublistv.vercel.app/docs"
  }
}
